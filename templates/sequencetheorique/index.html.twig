{% extends 'base.html.twig' %}

{% block title %}Liste des Séquences{% endblock %}

{% block menu %}
    {% import 'macro/macroMenu.html.twig' as macroMenu %}
    {{ macroMenu.menu('Abdo en acier', 9) }}

{% endblock %}

{% block body %}
    <h1>Listes des séquences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sequencetheorique in sequencetheoriques %}
            <tr>
                <td>{{ sequencetheorique.id }}</td>
                <td>{{ sequencetheorique.titre }}</td>
                <td>{{ sequencetheorique.niveau }}</td>
                <td>
                    <a href="{{ path('sequencetheorique_show', {'id': sequencetheorique.id}) }}">Afficher</a>
                    <a href="{{ path('sequencetheorique_edit', {'id': sequencetheorique.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'enregistrements</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sequencetheorique_new') }}">Ajouter une nouvelle</a>
{% endblock %}
